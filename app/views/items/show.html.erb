<div class="row">
  <div class="col-md-3 col-md-offset-2">
    <div class="text-center">
      <img src="<%= @item.image_url %>" alt="" width="220px">
    </div>
  </div>
  <div class="col-md-offset-0 col-md-6 col-xs-offset-1 col-xs-10">
    <h3><%= @item.name %></h3>
    <div class="buttons text-center">
      <%= render 'ownerships/want_button', item: @item %>
    </div>
    <p class="pull-right"><%= link_to '楽天詳細ページ >>', @item.url, target: '_blank' %></p>
  </div>
</div>
